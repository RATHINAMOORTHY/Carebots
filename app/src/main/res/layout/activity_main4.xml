<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/medical3"
    tools:context="rathinamoorthynataraj.carebots.Main3Activity">

    <Button
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORWARD"
        android:id="@+id/f"
        android:textStyle="bold"
        android:layout_alignWithParentIfMissing="false"
        android:layout_above="@+id/b"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

    <Button
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACKWARD"
        android:id="@+id/b"
        android:textStyle="bold"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/l"
        android:layout_toEndOf="@+id/l" />

    <Button
        android:height="45dp"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEFT"
        android:id="@+id/l"
        android:textStyle="bold"
        android:layout_alignWithParentIfMissing="false"
        android:layout_above="@+id/b"
        android:layout_toLeftOf="@+id/f"
        android:layout_toStartOf="@+id/f" />

    <Button
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RIGHT"
        android:id="@+id/r"
        android:textStyle="bold"
        android:layout_alignWithParentIfMissing="false"
        android:layout_above="@+id/b"
        android:layout_toRightOf="@+id/f"
        android:layout_toEndOf="@+id/f" />

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/videoView"
        android:layout_above="@+id/f" />

</RelativeLayout>
